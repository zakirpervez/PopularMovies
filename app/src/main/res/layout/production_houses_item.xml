<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productionCompaniesItem"
            type="com.husqvarna.popularmovies.api.models.response.ProductionCompaniesItem" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="@dimen/dimen_240"
        android:layout_height="@dimen/dimen_80"
        android:layout_margin="@dimen/dimen_8"
        android:background="@color/yellow"
        android:padding="@dimen/dimen_4"
        app:layoutDescription="@xml/movie_item_scene">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/production_house_image"
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_4"
            android:contentDescription="@string/movie_production_house_cd"
            android:background="@color/yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3"
            tools:src="@drawable/husqvarna_logo_vector" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/production_house_name_text"
            style="@style/Theme.App_Light.Text_Appearance"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/dimen_8"
            android:maxLines="1"
            android:text="@{productionCompaniesItem.name}"
            android:textSize="@dimen/dimen_text_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintStart_toEndOf="@+id/production_house_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            tools:text="Avenger End Game" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/country_image"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            app:layout_constraintDimensionRatio="H,1:1"
            android:background="@color/yellow"
            app:layout_constraintStart_toEndOf="@+id/production_house_image"
            android:contentDescription="@string/movie_country_cd"
            app:layout_constraintTop_toBottomOf="@id/production_house_name_text"
            app:layout_constraintWidth_percent="0.08"
            app:srcCompat="@drawable/baseline_account_balance_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/country_text"
            style="@style/Theme.App_Light.Text_Appearance"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="@{productionCompaniesItem.originCountry}"
            android:textSize="@dimen/dimen_text_12"
            app:layout_constraintBottom_toBottomOf="@id/country_image"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintStart_toEndOf="@+id/country_image"
            app:layout_constraintTop_toTopOf="@id/country_image"
            tools:text="16/10/2023" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>